<h1>Edit {{subject.name}}</h1>

<form action="/subjects/{{subject._id}}?_method=PUT" method="post">
  <div>
    <label for="">Name: </label>

    <input
      type="text"
      class="form-control"
      name="name"
      ,
      value="{{subject.name}}"
    />
  </div>

  <div>
    <label for="">Code: </label>

    <input
      type="text"
      class="form-control"
      name="code"
      ,
      value="{{subject.code}}"
    />
  </div>

  <div>
    <label for="">Department: </label>

    <select name="dep" id="" class="form-select" , value="{{subject.dep}}">
      <option value="CS">CS</option>
      <option value="IS">IS</option>
      <option value="IT">IT</option>
      <option value="General">General</option>

    </select>
  </div>

  <div>
    <label for="">Pre_req: </label>

    <input
      type="text"
      class="form-control"
      name="pre_req"
      ,
      value="{{subject.pre_req}}"
    />
  </div>

  <br />
  <div>

    <button class="btn btn-success" type="submit">
      Edit
    </button>

  </div>
</form>