<h1>
  subjects
</h1>
<hr>

<div class="my-2">
  <a href="/subjects/create">Add a anew subject </a>
</div> <br>

{{#each subjects}}


<div class="d-flex justify-content-between">
  <a href="subjects/{{_id}}">
    {{name}}
  </a>

  <div>
    <a href="/subjects/{{_id}}/edit">Edit</a>

    |

    <form action="/subjects/{{_id}}?_method=DELETE" method="post">

      <button class="btn btn-success" type="submit">Delete</button>
    </form>
  </div>
</div>





{{/each}}